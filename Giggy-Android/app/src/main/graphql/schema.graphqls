type Farm {
  id: UUID!

  name: String!

  thumbnail: String!

  userId: UUID!

  created_at: Time!

  updated_at: Time!

  deleted_at: Time
}

input GpsInput {
  lat: Float!

  lng: Float!
}

type Market {
  id: UUID!

  name: String!

  image: String!

  volume: Int!

  unit: String!

  tag: String!

  pricePerUnit: Int!

  created_at: Time!

  updated_at: Time!
}

type Mutation {
  createPost(input: NewPostInput!): Post!

  createFarm(input: NewFarmInput!): Farm!

  createFarmMarket(input: NewFarmMarketInput!): Market!
}

input NewFarmInput {
  name: String!

  thumbnail: String!
}

input NewFarmMarketInput {
  farmId: UUID!

  product: String!

  image: String!

  volume: Int!

  location: GpsInput!

  tag: String!

  unit: String!

  pricePerUnit: Int!
}

input NewPostInput {
  text: String!

  image: String!

  tags: [String!]!

  userId: UUID!

  location: GpsInput!
}

type Order {
  id: UUID!

  volume: Int!

  toBePaid: Int!

  customerId: UUID!

  marketId: UUID!

  market: Market!

  customer: User!

  created_at: Time!

  updated_at: Time!
}

type Payment {
  id: UUID!

  customer: String!

  amount: Int!

  reason: String!

  status: PaymentStatus!

  orderId: UUID!

  created_at: Time!

  updated_at: Time!
}

enum PaymentStatus {
  PAID

  PENDING

  FAILED
}

type Post {
  id: UUID!

  text: String!

  image: String!

  tags: [String!]!

  userId: UUID!

  user: User!

  created_at: Time!

  updated_at: Time!
}

type Query {
  getLocalizedPosters(radius: GpsInput!): [Post!]!

  getFarmsBelongingToUser: [Farm!]!

  getUser: User!

  getLocalizedMarkets(radius: GpsInput!): [Market!]!

  getFarmById(id: UUID!): Farm!

  getFarmMarkets(id: UUID!): [Market!]!

  getFarmOrders(id: UUID!): [Order!]!

  getFarmPayments(id: UUID!): [Payment!]!
}

scalar Time

scalar UUID

type User {
  id: UUID!

  phone: String!

  avatar: String!

  username: String!

  created_at: Time!

  updated_at: Time!

  deleted_at: Time
}

